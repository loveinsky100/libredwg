#!/bin/sh
# create -v3 logs and json's from DWG or DXF with dwgread -Ojson
srcdir="."
top_builddir="."
CFLAGS="-g -O2"
timeout=""
TESTS_ENVIRONMENT=""

if [ -n "$VALGRIND" ] && [ -n "$LOG_COMPILER" ]; then
    TESTPROG="$LOG_COMPILER $LOG_FLAGS"
elif [ -n "" ]; then
    TESTPROG=""
elif [ -n "$TESTS_ENVIRONMENT" ]; then
    TESTPROG="$TESTS_ENVIRONMENT ${top_builddir}/libtool --mode=execute"
else
    TESTPROG="${top_builddir}/libtool --mode=execute"
fi

case "$CFLAGS" in
*-DDEBUG_CLASSES*) timeout="" ;;
*) ;;
esac
make -s -C src
make -s -C programs dwgread
if [ -n "" ]; then
     programs/dwgread
fi
v=-v3
# dummy to please shellcheck
test -z "$v" && echo $top_builddir
out=
ob="$b"
ext=
gerr=0
log=
jext="json"

for d in "$@"; do
    case $d in
    -m)
        jext="min.json"
        ;;
    -v*)
        v="$d"
        ;;
    -l*)
        log="$(echo "$d" | cut -c3-)"
        ;;
    *)
        if [ ! -f "$d" ]; then
            if [ -f "$srcdir/test/test-data/$d" ]; then
                d="$srcdir/test/test-data/$d"
            elif [ -f "$srcdir/test/test-data/$d.dwg" ]; then
                b="$(basename "$d")"
                d="$srcdir/test/test-data/$d.dwg"
                ext=dwg
            elif [ -f "$srcdir/test/test-data/$d.dxf" ]; then
                b="$(basename "$d")"
                d="$srcdir/test/test-data/$d.dxf"
                ext=dxf
            fi
        fi
        xd=$(dirname "$d")
        dir=_$(basename "$xd")
        [ "$dir" = "_test-data" ] && dir=""
        [ "$dir" = "_td" ] && dir=""
        [ "$dir" = "_." ] && dir=""
        if [ -z "$ext" ]; then
            case $(basename "$d") in
            *.dwg)
                ext=dwg
                b=$(basename "$d" .$ext)
                ;;
            *.DWG)
                ext=dwg
                b=$(basename "$d" .DWG)
                ;;
            *.dxf)
                ext=dxf
                b=$(basename "$d" .$ext)
                ;;
            *.DXF)
                ext=dxf
                b=$(basename "$d" .DXF)
                ;;
            *.json)
                ext=json
                b=$(basename "$d" .$ext)
                ;;
            *.JSON)
                ext=json
                b=$(basename "$d" .JSON)
                ;;
            *)
                ext=dwg
                b=$(basename "$d" .$ext)
                echo "Assume DWG file for $d"
                ;;
            esac
        fi
        if [ -z "$log" ]; then
            log="$b$dir.log"
        fi
        out="$b$dir.$jext"
        echo "$timeout $TESTPROG programs/dwgread $v -o $out $d 2>$log"
        # shellcheck disable=SC2086
        $timeout $TESTPROG programs/dwgread "$v" -o "$out" "$d" 2>"$log"
        err=$?
        [ $err -gt $gerr ] && gerr=$err
        tail -n2 "$log"
        ;;
    esac
done
v=
b=$ob
if [ $gerr -gt 128 ]; then exit 1; fi
